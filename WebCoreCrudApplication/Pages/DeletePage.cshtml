@page
@model WebCoreCrudApplication.Pages.DeletePageModel
@{
    ViewData["Title"] = "DeletePage";
}

<h2>DeletePage</h2>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeletePage</title>
</head>
<body>
    <h4>Delete Employee Record</h4>
    <h5>Are you sure you want to delete this?</h5>
    <table class="table table-bordered" style="width:250px">
        <tbody>
            <tr>
                <td>
                    <label for="txtEmpName">Employee Name :</label>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Employee.Name)
                </td>
            </tr>
            <tr>
                <td><label for="txtEmpName">Employee Department :</label></td>
                <td>@Html.DisplayFor(model => model.Employee.Department)</td>
            </tr>
            <tr>
                <td><label for="txtEmpName">Gender :</label></td>
                <td>@Html.DisplayFor(model => model.Employee.Gender)</td>
            </tr>
            <tr>
                <td><label for="txtEmpName">City :</label></td>
                <td>@Html.DisplayFor(model => model.Employee.City)</td>
            </tr>
        </tbody>
    </table>
    <form method="post">
        <table>
            <tbody>
                <tr>
                    <td>
                        <input asp-for="Employee.ID" type="hidden" />
                    </td>
                    <td colspan="2"><input id="Button1" type="submit" value="Delete" class="btn btn-primary" /> | <a asp-page="./Index" class="btn btn-primary">Cancel</a></td>
                </tr>
            </tbody>
        </table>
    </form>
</body>
</html>
